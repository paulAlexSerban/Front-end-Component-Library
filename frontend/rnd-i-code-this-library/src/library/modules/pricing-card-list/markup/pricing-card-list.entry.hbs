    .card {
      width: 290px;
      height: 430px;
      display: flex;
      align-items: flex-start;
      justify-content: space-around;
      flex-direction: column;
      padding-block: 1rem;
      padding-inline: 2rem;
      border-radius: 12px;
      background-color: #FFFFFF;
      position: relative;
      box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
      font-family: 'Roboto', sans-serif;
    }

    .card::before {
      width: 104%;
      height: 103%;
      border-radius: 12px;
      content: "";
      position: absolute;
      left: -2%;
      height: -2%;
      transition: .2s all ease-in;
      z-index: -1;
    }

    .card:first-of-type::before {
      background-color: #805AD3;
    }

    .card:last-of-type::before {
      background-color: #C4458A;
    }

    .card:hover::before {
      transform: scale(1.01);
      background-color: #59585a;

    }

    .shapes {
      position: absolute;
      width: 100vw;
      height: 100vh;
      z-index: -2;
      padding-block: 1rem;
    }


    .square {
      position: absolute;
      width: 10rem;
      height: 10rem;
      border-radius: 5px;
      background-color: #9f9cd6;
      box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset,
        rgba(50, 50, 93, 0.25) 0px 50px 100px -20px,
        rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
      -webkit-animation: rotate-scale-up 3s linear both infinite;
      animation: rotate-scale-up 60s linear both infinite;
    }

    .circle {
      position: absolute;
      width: 10rem;
      height: 10rem;
      border-radius: 50%;
      background-color: #C4458A;
      box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset,
        rgba(50, 50, 93, 0.25) 0px 50px 100px -20px,
        rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
      -webkit-animation: rotate-scale-upcircle 10s linear both infinite;
      animation: rotate-scale-upcircle 50s linear both infinite;
      animation-delay: 1s;
    }

    @keyframes rotate-scale-upcircle {
      0% {
        -webkit-transform: scale(1) rotateZ(0);
        transform: scale(1) rotateZ(0);
        top: 0;
        left: 0;
      }

      50% {
        -webkit-transform: scale(2) rotateZ(180deg);
        transform: scale(2) rotateZ(180deg);
        top: 50%;
        left: 50%;
      }


      100% {
        bottom: 0;
        right: 0;
        -webkit-transform: scale(1) rotateZ(360deg);
        transform: scale(1) rotateZ(360deg);
      }
    }

    @keyframes rotate-scale-up {
      0% {
        -webkit-transform: scale(1) rotateZ(0);
        transform: scale(1) rotateZ(0);
        bottom: 3%;
        right: 0;
      }

      50% {
        -webkit-transform: scale(2) rotateZ(180deg);
        transform: scale(2) rotateZ(180deg);
        top: 50%;
        left: 50%;
      }

      100% {
        top: 0;
        left: 0;
        -webkit-transform: scale(1) rotateZ(360deg);
        transform: scale(1) rotateZ(360deg);
      }
    }

