                </article>
            `;
        document.querySelector('.cards').appendChild(newCard);
      });
    });

    document.querySelector('.save').addEventListener('click', function () {
      document.querySelector('.container').classList.add('animate__animated', 'animate__zoomOut');
      setTimeout(() => {
        document.querySelector('.container').classList.remove('animate__animated', 'animate__zoomOut');
        document.querySelector('.container').classList.add('animate__animated', 'animate__bounceIn');
      }, 2500);
    });

    document.querySelector('.close').addEventListener('click', function () {
      document.querySelector('.container').classList.add('animate__animated', 'animate__zoomOut');
      setTimeout(() => {
        document.querySelector('.container').classList.remove('animate__animated', 'animate__zoomOut');
        document.querySelector('.container').classList.add('animate__animated', 'animate__bounceIn');
      }, 2500);
    });

    function fetchRandomDribbbleImage() {
      const dribbbleApiUrl = 'https://api.example.com/dribbble/random';

      return fetch(dribbbleApiUrl)
        .then(response => response.json())
        .then(data => data.imageUrl)
        .catch(error => {
          console.error('Error fetching Dribbble image:', error);
          // Provide a fallback URL or handle the error as needed
          return 'https://placekitten.com/300/200'; // Fallback to a kitten image
        });
    }

