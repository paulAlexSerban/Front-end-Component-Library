    document.querySelector('.create').addEventListener('click', function () {
      const newCard = document.createElement('div');
      newCard.classList.add('card', 'flex', 'justify-between', 'items-center', 'p-3', 'hover:bg-orange-200', 'group');

      // Fetch a random image from Dribbble (replace with your own logic)
      fetchRandomDribbbleImage().then(imageUrl => {
        newCard.innerHTML = `
                <figure>
                    <img src="${imageUrl}" class="border-2 border-transparent group-hover:border-orange-400 rounded-md" alt="New Card Image">
                </figure>
                <article>
