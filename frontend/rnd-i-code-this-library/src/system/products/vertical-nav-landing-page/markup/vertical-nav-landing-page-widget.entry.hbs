        field8: '¡No solo divertida, también es una experiencia genial! Cosas encantadoras, para ver y probar.',
        field9: 'El río de lo sueños, Florida',
        field10: 'Horario de apertura',
        field11: 'Lunes - Jueves',
        field12: 'Viernes - Sábado',
        field13: 'Domingo',
        selectOptions: ['INGLÉS', 'ESPAÑOL'],
      },

      english: {
        field1: 'Home',
        field2: 'About',
        field3: 'Exhibit',
        field4: 'Group Visits',
        field5: 'Contact',
        field6: 'Come to your senses',
        field7: 'View our prices',
        field8: 'Not just fun but really cool experience! Lovely stuff, exited to show you it all and lots of things to see and try',
        field9: 'River of dreams',
        field10: 'Working hours',
        field11: 'Monday - Thursday',
        field12: 'Friday - Saturday',
        field13: 'Sunday',
        selectOptions: ['ENGLISH', 'SPANISH'],
      },
    };


    // Update every single element with proper translation
    const updateLanguageElems = (languageOption) => {
      translatableElems.forEach((translatableElem, i) => {
        // Updates languages for almost all visible elements
        const field = 'field' + (i + 1);
        translatableElem.textContent = LANGUAGES[languageOption][field];

      });
    }

    // Updates languages for Select Options
    const updateSelectOptions = (languageOption) => {
      // Translation for select options text
      const options = languagesSelect.querySelectorAll('option');
      options.forEach((option, i) => {
        option.textContent = LANGUAGES[languageOption].selectOptions[i];
      });
    };


    // Change language settings and updates flag icons;
    const setLanguage = () => {
      languagesSelect.addEventListener('change', () => {
        const languageOption = languagesSelect.value;
        if (languageOption == 'english') {
          flags[0].classList.remove('opacity-0');
          flags[0].classList.remove('pointer-events-none');
          flags[1].classList.add('opacity-0');
          flags[1].classList.add('pointer-events-none');

        } else {
          flags[0].classList.add('opacity-0');
          flags[0].classList.add('pointer-events-none');
          flags[1].classList.remove('opacity-0');
          flags[1].classList.remove('pointer-events-none')
        }
        updateLanguageElems(languageOption);
        updateSelectOptions(languageOption);
      });
    }


    /* Hamburger menu toggle */
    menuIcon.addEventListener('click', () => {
      mainNav.classList.toggle('nav--active');
      if (mainNav.classList.contains('nav--active')) {
