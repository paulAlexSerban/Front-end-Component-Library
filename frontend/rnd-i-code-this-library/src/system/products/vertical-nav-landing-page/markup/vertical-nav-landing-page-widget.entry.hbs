    const flags = document.querySelectorAll('.flags img');
    const languagesSelect = document.querySelector('#languages-select');
    const translatableElems = document.querySelectorAll('.translation');




    // Prevent links default behaviour
    const overrideLinks = () => {
      links.forEach((link) => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
        });
      });
    }

    const LANGUAGES = {
      spanish: {
        field1: 'Home',
        field2: 'Acerca de',
        field3: 'Exhibit',
        field4: 'Visitas en grupo',
        field5: 'Contacto',
        field6: 'Expande tus sentidos',
