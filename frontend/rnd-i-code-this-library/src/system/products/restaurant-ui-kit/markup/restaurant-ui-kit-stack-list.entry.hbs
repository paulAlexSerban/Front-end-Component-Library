                            <div class="px-2 border border-slate-200 rounded-full text-sm hover:text-rose-500 hover:bg-slate-200 duration-300 cursor-default">Wine</div>
                        </div>
                    </div>
                </div>
            </div>
    `;
    }
    container.insertAdjacentHTML('beforeend', html_string);

    const restaurants = document.querySelectorAll(".restaurant");
    const modal = document.querySelector("#modal");
    const mainReserveDiv = document.querySelector("#mainReserveDiv");
    const thankMessageDiv = document.querySelector("#thankMessageDiv");
    const modalCloseBtn = document.querySelectorAll(".modalCloseBtn");
    const reserveBtn = document.querySelector("#reserveBtn");

    // const timer = null; 

    modalCloseBtn.forEach(btn => {
      btn.addEventListener("click", () => {
        modal.classList.add("hidden");
        clearInputs();
      });

      // clearTimeout(timer);
    })
    reserveBtn.addEventListener("click", () => {
      reserve();
      clearInputs();

      mainReserveDiv.classList.add('hidden');
      thankMessageDiv.classList.remove('hidden');
      // timer = setTimeout(() => {
      //     modal.classList.add("hidden"); 
      // }, 2000);
    });

    restaurants.forEach((res) => {
      res.addEventListener("click", () => {
        mainReserveDiv.classList.remove('hidden');
        thankMessageDiv.classList.add('hidden');
        modal.classList.remove('hidden');
      })
    })

    const peopleContainer = document.querySelector("#peopleContainer");
    const numberOfPeople = document.querySelector("#numberOfPeople");
    const peopleNum = 12;
    html_string = '';
    for (let i = 1; i < peopleNum; i++) {
      html_string += `
        <input type="radio" name="people" id="people_${i}" class="peer/people_${i} hidden" value="${i}" ${i == 1 ? 'checked' : ''} />
        <label for="people_${i}"  class="w-12 h-12 rounded-full text-lg flex items-center justify-center hover:bg-rose-500 active:bg-rose-600 select-none duration-200 cursor-pointer peer-checked/people_${i}:bg-rose-500">
            ${i}
        </label>
    `;

    }

    peopleContainer.insertAdjacentHTML('beforeend', html_string);


    const peopleInputs = document.querySelectorAll("input[name='people']");
    const timeInputs = document.querySelectorAll("input[name='time']");

    peopleInputs.forEach(function (radioInput) {
      radioInput.addEventListener('change', function () {
        numberOfPeople.textContent = this.value;
      });
    });

    function clearInputs() {
      numberOfPeople.textContent = "4";
      peopleInputs.forEach(function (radioInput) {
        if (radioInput.value == 4) {
          radioInput.checked = true;
        } else {
          radioInput.checked = false;
        }
      });
      timeInputs.forEach(function (radioInput) {
        if (radioInput.value == "800pm") {
          radioInput.checked = true;
        } else {
          radioInput.checked = false;
        }
      });
    }


    const thankMessage = document.querySelector("#thankMessage");
    function reserve() {
      const numPeople = document.querySelector("input[name='people']:checked").value;
      const selectedTime = document.querySelector("input[name='time']:checked").value;

      const hours = selectedTime.slice(0, -4);
      const minutes = selectedTime.slice(-4, -2);
      const cleanedTime = hours + ':' + minutes + ' ' + selectedTime.slice(-2);

      thankMessage.innerHTML = `Thank you for reserving <span class="font-bold">${numPeople}</span> people.<br>Reserved time slot: <span class="font-bold">${cleanedTime}</span>`;
    }

  </script>
</body>

