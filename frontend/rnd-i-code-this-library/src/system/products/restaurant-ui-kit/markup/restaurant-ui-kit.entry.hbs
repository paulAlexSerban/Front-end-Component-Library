  <script type="module">
    const inputNumbers = document.querySelectorAll(".numbers input[type='radio']")
    const peopleNumberDisplay = document.querySelector(".people-number")

    inputNumbers.forEach(number => {
      number.addEventListener("click", () => {
        peopleNumberDisplay.textContent = number.parentNode.textContent
      })
    })

    const accordionBtn = document.querySelector(".accordion-btn")
    const accordionContainer = document.querySelector(".accordion")

    accordionBtn.addEventListener("click", () => {
      accordionContainer.classList.toggle("is-open")
      accordionBtn.classList.toggle("rotated")
    })
  </script>


  <style>
    *,
    *::before,
    *::after {
      box-sizing: border-box;
