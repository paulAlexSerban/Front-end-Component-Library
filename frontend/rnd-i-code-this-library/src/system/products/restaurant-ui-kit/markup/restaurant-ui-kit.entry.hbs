    html:focus-within {
      scroll-behavior: smooth;
    }

    body {
      min-height: 100vh;
      min-height: 100dvh;
      scrollbar-gutter: stable;
      -webkit-font-smoothing: antialiased;
    }

    img,
    picture,
    svg,
    video {
      display: block;
      max-width: 100%;
    }

    button>svg {
      pointer-events: none;
    }

    input,
    button,
    textarea,
    select {
      font: inherit;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      overflow-wrap: break-word;
      line-height: 1.2;
    }

    p {
      overflow-wrap: break-word;
    }

    :root {
      --fz-200: clamp(0.6331rem, 0.7157rem + -0.1065vw, 0.6944rem);
      --fz-300: clamp(0.8331rem, 0.8294rem + 0.0185vw, 0.8438rem);
      --fz-400: clamp(1rem, 0.9565rem + 0.2174vw, 1.125rem);
      --fz-500: clamp(1.2rem, 1.0959rem + 0.5207vw, 1.4994rem);
      --fz-600: clamp(1.44rem, 1.2457rem + 0.9717vw, 1.9988rem);
      --fz-700: clamp(1.7281rem, 1.4025rem + 1.6283vw, 2.6644rem);

      --clr-primary: 228, 7%, 14%;
      --clr-secondary: 0, 0%, 100%;
      --clr-accent: 41, 100%, 51%;
    }

    body {
      display: grid;
      place-content: center;

      font-family: 'Montserrat', sans-serif;
      font-size: var(--fz-300);
      color: hsl(var(--clr-secondary));

      background-color: hsl(0, 0%, 96%);
    }

    section:not(.reservation) {
      padding: 1.5rem;

      background-color: hsl(var(--clr-primary));
      box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
      border-radius: 0.8rem;
    }

    .ui-kit {
      display: grid;
      grid-template-areas:
        'restaurant-info people'
        'reservation time';
      gap: 2rem;
      align-items: end;
      justify-items: start;
      margin-inline: 2rem;

      @media (max-width: 40em) {
        margin-block: 3rem;

        grid-template-areas:
          "restaurant-info"
          "people"
          "reservation"
          "time";
      }
    }

    .restaurant-info {
      grid-area: restaurant-info;

      & h2 {
        font-size: var(--fz-400);
        font-weight: 600;
        margin-block-end: 1rem;
      }

      @media (min-width: 40em) {
        margin-bottom: -1rem;
      }
    }

    .restaurant {
      display: flex;
      gap: 0.5rem;
      align-items: center;

      padding: 1rem;

      color: hsl(var(--clr-primary));

      background-color: hsl(var(--clr-secondary));
      border-radius: 0.5rem;

      & img {
        max-width: 6rem;
        aspect-ratio: 1;
        object-fit: cover;

        border-radius: 0.2rem;
      }

      & .details {
        & .name-rating {
          display: flex;
          align-items: center;
          gap: 2rem;

          & h4 {
            font-weight: 600;
          }

          & div {
            display: flex;
            gap: 0.2rem;
            align-items: center;

            font-size: var(--fz-400);
            line-height: 2;

          }
        }

        & .info {
          display: flex;
          gap: 0.2rem;
          align-items: center;

          font-size: var(--fz-200);
          line-height: 1.3;
        }

        & .info:not(:last-child) {
          margin-block-end: 0.3rem;
        }
      }
    }

    .header {
      display: flex;
      align-items: center;
      gap: 0.5rem;

      padding-block-end: 1.2rem;

      border-bottom: 1px solid hsl(var(--clr-secondary), 0.3);
    }

    input[type="radio"] {
      position: fixed;
      opacity: 0;
      pointer-events: none;
    }

    label {
      display: grid;
      place-content: center;

      cursor: pointer;

      border-radius: 2rem;

      transition: background-color 0.3s ease-in-out;
    }

    label:has(input[type="radio"]:checked) {
      background-color: hsl(var(--clr-accent));
    }

    .people {
      grid-area: people;

      position: relative;
      top: 0;

      max-width: 22.4rem;

      color: hsl(var(--clr-secondary), 0.8);

      & label {
        width: 2rem;
        aspect-ratio: 1;
        margin: 0.2rem;
      }

      & .header {
        & .accordion-btn {
          margin-inline-start: auto;
        }
      }

      & .numbers {
        display: flex;
        flex-wrap: wrap;

        margin-block: 0.5rem;
      }

      & a {
        color: hsl(var(--clr-accent));
        font-size: var(--fz-200);

        &:hover {
          text-decoration: underline;
        }
      }

      @media (min-width: 40em) {
        margin-bottom: 2rem;
        margin-left: 0.5rem;
      }
    }

    .accordion {
      display: grid;
      grid-template-rows: 0fr;
      transition: grid-template-rows 0.5s ease-out;
      transform-origin: top;
    }

    .accordion.is-open {
      grid-template-rows: 1fr;
    }

    .inner {
      overflow: hidden;
    }

    .rotated {
      rotate: 180deg;
    }

    .reservation {
      grid-area: reservation;
      justify-self: flex-end;
      align-self: flex-start;


      @media (max-width: 40em) {
        justify-self: start;
      }

      @media (min-width: 40em) {
        margin-top: 1rem;
      }
    }

    .reservation-btn {
      position: relative;
      isolation: isolate;

      padding: 0.8em 4em;

      font-weight: 600;

      background-color: hsl(var(--clr-accent));
      border: 2px solid hsl(var(--clr-accent));
      border-radius: 2rem;
    }

    .reservation-btn::after {
      content: "";
      position: absolute;
      inset: 0;
      z-index: -1;

      background-color: hsl(var(--clr-primary));
      border-radius: inherit;

      scale: 0 1;
      transform-origin: center;
      transition: scale 0.4s;
    }

    .reservation-btn:is(:hover, :focus)::after {
      scale: 1 1;
    }

    .time {
      grid-area: time;
      max-width: 23rem;

      & .hours {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;

        margin-block: 1rem 0.5rem;

        & label {
          padding: 0.5em 1.5em;
        }
      }

      @media (min-width: 40em) {
        margin-top: -2.5rem;
        margin-left: -0.5rem;
      }
    }
  </style>
